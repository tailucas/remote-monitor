[Unit]
Description=%(APP_NAME)s
After=network.target syslog.service

[Service]
Type=simple
PIDFile=/var/run/%(APP_NAME)s.pid
ExecStart=/usr/bin/python /app/%(APP_NAME)s
Restart=always
User=%(APP_USER)s
Group=%(APP_GROUP)s
Environment="HOME=/data/" "USER=%(APP_USER)s" "PYTHONPATH=/app/libs/IOPi/:/app/libs/ADCPi/:/app/:${PYTHONPATH:-}"

[Install]
WantedBy=multi-user.target